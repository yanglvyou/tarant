{
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start": "pnpm install --shamefully-hoist",
    "dev": "concurrently \"pnpm --filter=tarant dev:rollup\" \"pnpm dev:demo\"",
    "dev:demo": "pnpm --filter=tarant-demo dev:h5",
    "doc:start": "pnpm --filter=tarant-doc start",
    "build:demo": "pnpm --filter=tarant-demo build:h5 --public_path=$npm_config_path",
    "build:demo:vercel": "pnpm --filter=tarant-demo build:h5:vercel",
    "build": "pnpm build:tarant && pnpm build:loki",
    "build:tarant": "pnpm --filter=tarant build",
    "clear": "rimraf 'packages/*/{lib,node_modules}' && rimraf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version && pnpm start",
    "version-packages:ci": "changeset version && pnpm install --shamefully-hoist --no-frozen-lockfile",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "pnpm build && pnpm release:only",
    "release:only": "changeset publish --registry=https://registry.npmjs.com/",
    "test": "pnpm --filter=tarant-demo test",
    "checkUIChange": "node ./scripts/checkModifyListAndTest.js",
    "prepare": "husky",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "author": "",
  "private": true,
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "chalk": "^4.0.1",
    "concurrently": "^7.5.0",
    "connect": "^3.7.0",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.2.1",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^5.1.0",
    "eslint-config-taro": "^3.4.12",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "forever": "^4.0.3",
    "glob": "^8.0.3",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "prettier": "3.2.5",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "3.0.2",
    "serve-static": "^1.15.0",
    "shelljs": "^0.8.5",
    "typescript": "^3.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^17.0.0",
      "@types/react-dom": "^17.0.0",
      "@swc/core": "1.3.6"
    }
  }
}
